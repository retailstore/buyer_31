	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script>
		$(document).ready(function(){
	        $(".add-row").click(function(){
	            var data = "<tr><td><input type='checkbox' name='record'></td><td>It-Seed-Ps</td><td style='background-color:#b3ccff;'>PGCI2065</td><td style='background-color:#b3ccff;'>Psyllium Seeds</td><td>1</td><td>0</td><td>10.50</td><td>0 %</td><td style='background-color:#b3ccff;'>0.00</td><td style='background-color:#b3ccff;' id='l_price'>0.00</td></tr>";
	            $("table tbody").append(data);
		    });
		        
	        // Find and remove selected table rows
	        $(".delete-row").click(function(){
	            $(".raw-material tbody").find('input[name="record"]').each(function(){
	            	if($(this).is(":checked")){
	                    $(this).parents("tr").remove();
	                }
					
					if (($("#l_price").text()) == "") {
						$(".subtotal").text("0.00")
						$(".total").text("0.00")
					}
					else {
						$(".subtotal").text($("#l_price").text())
						$(".total").text($("#l_price").text())
					}
	            });
	        });
	    });
		
		$("#update").click(function() {
			$(".message").html("PGPO1234");
			$(".success-box").toggle();
		})
		function alert() {
			$(".message").html("PGPO1234");
			$(".success-box").toggle();
		}
		function back_login() {
			window.location.href = "B_Welcome.html"
		}

	</script>
